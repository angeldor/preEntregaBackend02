{{!< layouts/main}}

<h1>Lista de productos</h1>

<div class="productList">
    {{#each productData}}
    <div class="productCard">
        <h2>{{this.title}}</h2>
        <p>{{this.description}}</p>
        <p>Precio: {{this.price}}</p>
        {{!-- <img src="{{this.image}}" alt="{{title}}"> --}}
        <button class="agregarAlCarrito">Agregar al carrito</button>
    </div>
    {{/each}}
</div>