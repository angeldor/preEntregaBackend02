{{!< layouts/main}} <div class="titulo">
    <h1>Lista de productos</h1>
    </div>

    <div class="productList">
        {{#each productData}}
        <div class="productCard">
            <div class="header"></div>
            <div class="info">
                <h2 class="title">{{this.title}}</h2>
                <p>{{this.description}}</p>
            </div>
            <div class="footer">
                <p>Precio: </p>
                <p class="precio">$ {{this.price}}</p>
                <button class="agregarAlCarrito">Agregar al carrito</button>
            </div>
        </div>
        {{/each}}
    </div>

    <div class="navegacion">
        <ul>
            {{#if hasPrevPage}}
            <li><a href="?page={{prevPage}}">Anterior</a></li>
            {{/if}}

            {{#if hasNextPage}}
            <li><a href="?page={{nextPage}}">Siguiente</a></li>
            {{/if}}
        </ul>
    </div>