{{!< layouts/main}} <div class="titulo">
    <h1>Lista de productos</h1>
    </div>

    <div class="productList">
        {{#each productData}}
        <div class="productCard">
            <div class="header">
                <img src="{{this.image}}" alt="Foto producto">
            </div>
            <div class="info">
                <h2 class="title">{{this.title}}</h2>
                <p>{{this.description}}</p>
                <p></p>
                <p class="precio">Precio: ${{this.price}}</p>
            </div>
            <div class="footer">

                <button class="button">MÃ¡s info</button>
                <button class="button">Agregar al carrito</button>
            </div>
        </div>
        {{/each}}
    </div>

    <div class="navegacion">
        <ul>
            {{#if hasPrevPage}}
            <li><a class="button" href="?page={{prevPage}}">Anterior</a></li>
            {{/if}}

            {{#if hasNextPage}}
            <li><a class="button" href="?page={{nextPage}}">Siguiente</a></li>
            {{/if}}
        </ul>
    </div>